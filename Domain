namespace WikiTest.Domain
{
    public class WikiSection
    {
        public int Index { get; set; }
        public string Title { get; set; }
        public string Content { get; set; }
    }

    public interface IWikiPageService
    {
        Task<string> GetDebuggingSectionTextAsync();
        Task<bool> AreTechLinksValidAsync();
        Task SwitchToDarkModeAsync();
        Task<bool> IsDarkModeActiveAsync();
        Task<WikiSection> GetSectionByTitleAsync(string title);
    }

    public interface ITextNormalizer
    {
        string Normalize(string text);
        int CountUniqueWords(string text);
    }
}
